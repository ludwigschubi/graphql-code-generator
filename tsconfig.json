{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "packages",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es2018",
    "lib": ["es6", "esnext", "es2015", "dom"],
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "webql-codegen-cli": ["packages/graphql-codegen-cli/src/index.ts"],
      "webql-codegen-core": ["packages/graphql-codegen-core/src/index.ts"],
      "webql-codegen-flow": ["packages/plugins/flow/flow/src/index.ts"],
      "webql-codegen-flow-operations": ["packages/plugins/flow/operations/src/index.ts"],
      "webql-codegen-flow-resolvers": ["packages/plugins/flow/resolvers/src/index.ts"],
      "webql-codegen-java-apollo-android": ["packages/plugins/java/apollo-android/src/index.ts"],
      "webql-codegen-java-common": ["packages/plugins/java/common/src/index.ts"],
      "webql-codegen-java": ["packages/plugins/java/java/src/index.ts"],
      "webql-codegen-kotlin": ["packages/plugins/java/kotlin/src/index.ts"],
      "webql-codegen-java-resolvers": ["packages/plugins/java/resolvers/src/index.ts"],
      "webql-codegen-add": ["packages/plugins/other/add/src/index.ts"],
      "webql-codegen-fragment-matcher": ["packages/plugins/other/fragment-matcher/src/index.ts"],
      "webql-codegen-introspection": ["packages/plugins/other/introspection/src/index.ts"],
      "webql-codegen-schema-ast": ["packages/plugins/other/schema-ast/src/index.ts"],
      "webql-codegen-time": ["packages/plugins/other/time/src/index.ts"],
      "webql-codegen-visitor-plugin-common": ["packages/plugins/other/visitor-plugin-common/src/index.ts"],
      "webql-codegen-typescript-apollo-angular": ["packages/plugins/typescript/apollo-angular/src/index.ts"],
      "webql-codegen-typescript-compatibility": ["packages/plugins/typescript/compatibility/src/index.ts"],
      "webql-codegen-typescript-document-nodes": ["packages/plugins/typescript/document-nodes/src/index.ts"],
      "webql-codegen-typescript-generic-sdk": ["packages/plugins/typescript/generic-sdk/src/index.ts"],
      "webql-codegen-typescript-graphql-files-modules": [
        "packages/plugins/typescript/graphql-files-modules/src/index.ts"
      ],
      "webql-codegen-typescript-graphql-request": ["packages/plugins/typescript/graphql-request/src/index.ts"],
      "webql-codegen-typescript-mongodb": ["packages/plugins/typescript/mongodb/src/index.ts"],
      "webql-codegen-typescript-oclif": ["packages/plugins/typescript/oclif/src/index.ts"],
      "webql-codegen-typescript-operations": ["packages/plugins/typescript/operations/src/index.ts"],
      "webql-codegen-typescript-react-offix": ["packages/plugins/typescript/react-apollo-offix/src/index.ts"],
      "webql-codegen-typescript-react-apollo": ["packages/plugins/typescript/react-apollo/src/index.ts"],
      "webql-codegen-typescript-react-webql": ["packages/plugins/typescript/react-webql/src/index.ts"],
      "webql-codegen-typescript-resolvers": ["packages/plugins/typescript/resolvers/src/index.ts"],
      "webql-codegen-typescript-stencil-apollo": ["packages/plugins/typescript/stencil-apollo/src/index.ts"],
      "webql-codegen-typescript-type-graphql": ["packages/plugins/typescript/type-graphql/src/index.ts"],
      "webql-codegen-typed-document-node": ["packages/plugins/typescript/typed-document-node/src/index.ts"],
      "webql-codegen-typescript": ["packages/plugins/typescript/typescript/src/index.ts"],
      "webql-codegen-typescript-urql": ["packages/plugins/typescript/urql/src/index.ts"],
      "webql-codegen-typescript-vue-apollo": ["packages/plugins/typescript/vue-apollo/src/index.ts"],
      "webql-codegen-c-sharp": ["packages/plugins/c-sharp/c-sharp/src/index.ts"],
      "webql-codegen-c-sharp-apollo": ["packages/plugins/c-sharp/apollo-dot-net/src/index.ts"],
      "webql-codegen-import-types-preset": ["packages/presets/import-types/src/index.ts"],
      "webql-codegen-near-operation-file-preset": ["packages/presets/near-operation-file/src/index.ts"],
      "webql-codegen-testing": ["packages/utils/graphql-codegen-testing/src/index.ts"],
      "webql-codegen-plugin-helpers": ["packages/utils/plugins-helpers/src/index.ts"],
      "@graphql-cli/codegen": ["packages/graphql-cli-codegen-plugin/src/index.ts"]
    }
  },
  "include": ["packages"],
  "exclude": ["**/tests/test-files", "**/tests/test-documents", "**/dist", "**/temp"]
}
